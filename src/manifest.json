{
    "name": "CIViC-NLI",
    "description": "",
    "version": "1.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://civicdb.org/events/genes/*/summary/variants/*/summary/evidence/*",
                "https://staging.civicdb.org/evidence/**",
                "https://civicdb.org/evidence/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/inactive-favicon-16x16.png",
        "32": "icons/inactive-favicon-32x32.png"
    },
    "action": {
        "default_popup": "settings.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "insert.css"
            ],
            "matches": [
                "https://civicdb.org/*"
            ]
        }
    ]
}
